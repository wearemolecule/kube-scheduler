{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "generateName": "sample-job-",
    "labels": {
      "app": "smaple-job",
      "role": "scheduled-job"
    }
  },
  "spec": {
    "restartPolicy": "Never",
    "containers": [
      {
        "image": "quay.io/molecule/sample-job:latest",
        "name": "sample-job",
        "env": [
          {
            "name": "SAMPLE_ENV",
            "value": "env-var"
          }
        ]
      }
    ]
  }
}
